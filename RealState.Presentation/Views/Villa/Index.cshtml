
@model IEnumerable<Villa>
@{

}


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Villa List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Villa
                </a>
            </div>
        </div>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>@Html.DisplayNameFor(v => v.Name)</th>
                        <th>@Html.DisplayNameFor(v => v.Price)</th>
                        <th>@Html.DisplayNameFor(v => v.SquareFeet)</th>
                        <th>@Html.DisplayNameFor(v => v.Occupancy)</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.SquareFeet</td>
                            <td>@item.Occupancy</td>
                            <td>
                                <a asp-action="Update" asp-controller="Villa" asp-route-id="@item.Id" class="btn btn-success">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@string.Concat("deleteModal", item.Id.ToString())">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </button>
                            </td>

                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="@string.Concat("deleteModal",@item.Id.ToString())" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete this Employee?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-route-id="@item.Id.ToString()" method="post">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-3">
                <h3>There is no Villas :)</h3>
            </div>
        }

    </div>
</div>









